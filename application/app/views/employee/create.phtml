<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Employee</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Bootstrap Datepicker CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <style>
        /* Custom Styles */
        /*... Your styles ...*/
    </style>
</head>
<body>
<div class="container mt-5">
    <h1>Create New Employee</h1>
    <form id="create_employee_form">
        <div class="row mb-3">
            <div class="col">
                <label for="first_name">First Name:</label>
                <input type="text" id="first_name" name="first_name" class="form-control">
            </div>
            <div class="col">
                <label for="last_name">Last Name:</label>
                <input type="text" id="last_name" name="last_name" class="form-control">
            </div>
        </div>
        <div class="mb-3">
            <label for="contact_number">Contact Number:</label>
            <input type="text" id="contact_number" name="contact_number" class="form-control">
        </div>
        <div class="mb-3">
            <label for="date_of_birth">Date of Birth:</label>
            <input type="text" id="date_of_birth" name="date_of_birth" class="form-control datepicker" autocomplete="off">
        </div>
        <div class="mb-3">
            <label for="street_address">Street Address:</label>
            <input type="text" id="street_address" name="street_address" class="form-control">
        </div>
        <div class="row mb-3">
            <div class="col">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" class="form-control">
            </div>
            <div class="col">
                <label for="country">Country:</label>
                <input type="text" id="country" name="country" class="form-control">
            </div>
            <div class="col">
                <label for="postal_code">Postal Code:</label>
                <input type="text" id="postal_code" name="postal_code" class="form-control">
            </div>
        </div>

        <div class="mb-3">
            <label>Skills:</label>
            <div class="skills-container">
                <!-- Skill elements will be dynamically added here -->
            </div>
        </div>
        <div class="mb-3">
            <button type="button" class="btn btn-primary btn-add-skill">Add Skill</button>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap Datepicker JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<script>
    jQuery.noConflict();
    (function($) {
        // Function to add a new skill row
        function addSkillRow() {
            var skillRow = `
            <div class="row skill-row">
                <div class="col">
                    <input type="text" name="skills[]" class="form-control" placeholder="Enter skill">
                </div>
                <div class="col">
                    <input type="number" name="skills[][years_experience]" class="form-control" placeholder="Years of Experience">
                </div>
                <div class="col">
                    <select name="skills[][seniority_level]" class="form-control"></select>
                </div>
                <div class="col">
                    <button type="button" class="btn btn-danger btn-remove-skill">Remove</button>
                </div>
            </div>
            `;
            $(".skills-container").append(skillRow);
            populateSeniorityLevelDropdown();
        }

        // Function to populate the seniority level dropdown using AJAX call
        function populateSeniorityLevelDropdown() {
            $.ajax({
                url: 'http://localhost:8080/ratings/all',
                type: 'GET',
                success: function(response) {
                    var options = '';
                    $.each(response, function(index, rating) {
                        options += '<option value="' + rating.id + '">' + rating.rating + '</option>';
                    });
                    $("select[name^='skills[][seniority_level]']").html(options);
                },
                error: function() {
                    // Handle error if AJAX call fails
                }
            });
        }

        $(document).ready(function() {
            // Hide the skill container initially
            $(".skills-container").hide();

            // Add a new skill row when the "Add Skill" button is clicked
            $(document).on("click", ".btn-add-skill", function() {
                // Show the skill container when the first skill is added
                $(".skills-container").show();
                addSkillRow();
            });

            // Remove a skill row when the "Remove" button is clicked
            $(document).on("click", ".btn-remove-skill", function() {
                $(this).closest(".skill-row").remove();
            });

            // Handle form submission
            $("#create_employee_form").submit(function(e) {
                e.preventDefault();
                // Extract form data and submit it to the server using AJAX or form submission
                var formData = $(this).serializeArray();
                console.log(formData);
                // Add your AJAX or form submission code here to save the data on the server
            });

            // Initialize the datepicker
            $(".datepicker").datepicker({
                format: 'yyyy-mm-dd', // You can change the format to your preferred format
                autoclose: true,
                todayHighlight: true
            });
        });
    })(jQuery);
</script>

</body>
</html>
